<%- include('../partials/header.ejs') %>
<div class="mt-2">
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>username</th>
        <th>Danh hieu</th>
        <th>So luong Cave</th>
        <th>So luong Review</th>
        <th>Ngay Tham gia</th>
      </tr>
    </thead>
    <tbody>
      <% users.docs.forEach((user,index)=>{ %>

      <tr>
        <th><%=++index%></th>
        <td><a href="/user/<%=user.id%>/details"><%=user.username %></a></td>
        <td>Ga`</td>
        <td>4</td>
        <td>3</td>
        <td><%=new Date(user.createdAt).toLocaleDateString()%></td>
      </tr>
      <%}) %>
    </tbody>
  </table>

  <!--  paging -->
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <% if(users.hasPrevPage){ %>
      <li class="page-item">
        <a class="page-link" href="/user?page=<%=users.prevPage%>">Previous</a>
      </li>
      <%}else { %>
      <li class="page-item disabled">
        <a class="page-link" href="#">Previous</a>
      </li>
      <% } %> <% for(var i =1; i<= users.totalPages;i++){ %> <% if(users.page
      ===(i)) { %>
      <li class="page-item active">
        <a class="page-link" href="/user?page=<%=i%>"><%=i%></a>
      </li>
      <% }else{ %>
      <li class="page-item">
        <a class="page-link" href="/user?page=<%=i%>"><%=i%></a>
      </li>
      <% } %> <% } %> <% if(users.hasNextPage){ %>
      <li class="page-item">
        <a class="page-link" href="/user?page=<%=users.nextPage%>">Next</a>
      </li>
      <% }else { %>
      <li class="page-item disabled">
        <a class="page-link" href="/user?page=<%=users.nextPage%>">Next</a>
      </li>
      <% } %>
    </ul>
  </nav>
  <!--  -->
</div>
<%- include('../partials/footer.ejs') %>
